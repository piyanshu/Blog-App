<%- include('./partials/navbar') %>

<div id="form">
    <form action="/blogs"method="post">
        <span>New Blog</span>
        <div class="input-fields">
            <label for="title">Title</label><br>
            <input type="text"name="title"value="<%= blog.title %>"placeholder="Title"autocomplete="off" required>
        </div>
        <div  class="input-fields">
            <label for="imgurl">Image URL</label><br>
            <input type="text"name="imgurl"value="<%= blog.imgurl %>"placeholder="URL"autocomplete="off" required>
        </div>
        <div class="input-fields">
            <label for="description">Description</label><br>
            <textarea name="description"value="<%= blog.description %>"cols="106" rows="10"autocomplete="off"required></textarea>
        </div>
        <button id="btn"type="submit">Submit</button>
    </form>
</div>

